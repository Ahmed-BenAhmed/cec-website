//- contact.pug
extends layouts/_layout.pug

block content
  section.page-header
    .container
      h1.page-header__title Contact Us
      p.page-header__subtitle We'd love to hear from you! Reach out with any questions, ideas, or just to say hello.

  section.contact-section
    .container
      .contact-section__grid
        .contact-section__info
          h2.contact-section__info-title Get in Touch
          p If you have any inquiries or want to collaborate, please don't hesitate to contact us through the form or using the details below.

          .contact-details
            .contact-details__item
              i.fas.fa-map-marker-alt 
              span ENSA Berrechid, Km 5, Route de Casablanca BP 26100, Berrechid, Morocco
            .contact-details__item
              i.fas.fa-envelope
              a(href="mailto:contact@cecclub.com") contact@cecclub.com
            .contact-details__item
              i.fas.fa-phone
              a(href="tel:+212000000000") +212 (0)00 000 000 
              
          h3.contact-section__info-subtitle Follow Us
          .contact-socials
            a.contact-socials__link(href="#", aria-label="Facebook")
              i.fab.fa-facebook-f
            a.contact-socials__link(href="#", aria-label="Twitter")
              i.fab.fa-twitter
            a.contact-socials__link(href="#", aria-label="LinkedIn")
              i.fab.fa-linkedin-in
            a.contact-socials__link(href="#", aria-label="Instagram")
              i.fab.fa-instagram

        .contact-section__form-container
          h2.contact-section__form-title Send Us a Message
          form.contact-form(action="#", method="POST") 
            .form-group
              label.form-label(for="name") Full Name
              input.form-control(type="text", id="name", name="name", required)
            
            .form-group
              label.form-label(for="email") Email Address
              input.form-control(type="email", id="email", name="email", required)
              
            .form-group
              label.form-label(for="subject") Subject
              input.form-control(type="text", id="subject", name="subject", required)
              
            .form-group
              label.form-label(for="message") Message
              textarea.form-control(id="message", name="message", rows="6", required)
              
            button.btn.btn--primary.contact-form__btn(type="submit") Send Message
    section.map-section
      .container
        iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3322.5092818887636!2d-7.5865997!3d33.2583511!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xda63ce6a6c999b5%3A0x9823260201eae931!2sNational%20School%20of%20applied%20sciences_BERRECHID!5e0!3m2!1sen!2sma!4v1715288487177!5m2!1sen!2sma" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade")